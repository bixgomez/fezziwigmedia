{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">

        {% if (post.thumbnail) %}
          <div class="image">
            <div class="inner">
              <img class="portrait-large" src="{{post.thumbnail.src('portrait-large')}}">
              <img class="square-medium" src="{{post.thumbnail.src('square-medium')}}">
            </div>
          </div>
        {% endif %}

        <div class="text">
          <div class="inner">
            <h1 class="article-h1">{{post.title}}</h1>
            <div class="article-body">
              {{post.content}}
            </div>
          </div>
        </div>

			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}